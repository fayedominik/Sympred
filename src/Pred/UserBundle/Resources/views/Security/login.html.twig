{% extends "PredUserBundle::layout.html.twig" %}
{% trans_default_domain 'PredUserBundle' %}
{% block fos_user_content %}
    <div  class="panel panel-default col-md-8" style="margin-left:15%; box-shadow: 1px 1px 1px 1px lightgrey;">
        <h4 style="text-align: center;">Formulaire de connexion</h4>
        <div class="panel-body">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label for="username" class="col-lg-4 control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-lg-4 control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="col-lg-6">
                        <input type="password" class="form-control" id="password" name="_password" required="required"/>
                    </div>
                </div>
                <div class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                </div>
                <br/><input  class="btn btn-success" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
            </form>
        </div>
    </div>
{% endblock %}

